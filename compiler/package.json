{
  "name": "jrb8-compiler",
  "version": "1.0.0",
  "description": "Compiler for JRB8 Computer",
  "main": "dist/compiler.js",
  "scripts": {
    "test": "jest",
    "build": "tsc && npm run bundle",
    "bundle": "esbuild web.ts --bundle --outfile=dist/bundle.js --global-name=jrb8Compiler --platform=browser",
    "start": "ts-node compiler.ts",
    "convert": "node scripts/convert_csv_to_ts.js",
    "dev": "npm run build && http-server ./dist -o -c-1",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{ts,json,md}\""
  },
  "dependencies": {
    "http-server": "^14.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "csv-parser": "^3.2.0",
    "esbuild": "^0.19.0",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "jest": "^29.5.0",
    "prettier": "3.5.1",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.1"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  }
}
